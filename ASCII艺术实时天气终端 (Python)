import requests
from colorama import Fore

def get_weather_emoji(code):
    emoji_map = {
        '01d': 'â˜€ï¸', '01n': 'ğŸŒ•',
        '02d': 'â›…', '02n': 'â˜ï¸',
        '09d': 'ğŸŒ§ï¸', '10d': 'ğŸŒ¦ï¸',
        '11d': 'ğŸŒ©ï¸', '13d': 'â„ï¸',
    }
    return emoji_map.get(code, 'ğŸŒ€')

def display_weather(city):
    API_KEY = "your_openweathermap_api_key"
    url = f"http://api.openweathermap.org/data/2.5/weather?q={city}&appid={API_KEY}&units=metric"
    
    try:
        data = requests.get(url).json()
        temp = data['main']['temp']
        desc = data['weather'][0]['description']
        code = data['weather'][0]['icon']
        
        # ASCIIè‰ºæœ¯ç”Ÿæˆ
        art = f"""
        {Fore.CYAN}â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—
        â•‘  {get_weather_emoji(code)} {city.upper():<12} â•‘
        â• â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•£
        â•‘ Temp: {temp}Â°C       â•‘
        â•‘ {desc.capitalize():<19} â•‘
        â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
        {Fore.RESET}"""
        print(art)
        
    except Exception as e:
        print(f"{Fore.RED}âš  Error: {e}{Fore.RESET}")

if __name__ == "__main__":
    display_weather(input("Enter city name: "))
