import random
from enum import Enum

class ClassType(Enum):
    WARRIOR = {'hp': 120, 'attack': 15}
    MAGE = {'hp': 80, 'attack': 25}
    ROGUE = {'hp': 100, 'attack': 20}

class Player:
    def __init__(self, name, class_type):
        self.name = name
        self.hp = class_type.value['hp']
        self.attack = class_type.value['attack']
        self.skills = {
            'WARRIOR': ['æ—‹é£æ–©', 'ç›¾å‡»'],
            'MAGE': ['ç«çƒæœ¯', 'å†°éœœæ–°æ˜Ÿ'],
            'ROGUE': ['èƒŒåˆº', 'æ¯’åˆƒ']
        }[class_type.name]
    
    def take_damage(self, damage):
        self.hp = max(0, self.hp - damage)
        return self.hp > 0

def battle(player1, player2):
    print(f"\nâš”ï¸ {player1.name} vs {player2.name}!")
    
    while True:
        # ç©å®¶1è¡ŒåŠ¨
        skill = random.choice(player1.skills)
        dmg = player1.attack + random.randint(-3, 5)
        print(f"{player1.name} ä½¿ç”¨ [{skill}] é€ æˆ {dmg}ç‚¹ä¼¤å®³")
        if not player2.take_damage(dmg):
            print(f"ğŸ‰ {player1.name} è·èƒœï¼")
            return

        # ç©å®¶2è¡ŒåŠ¨
        skill = random.choice(player2.skills)
        dmg = player2.attack + random.randint(-3, 5)
        print(f"{player2.name} ä½¿ç”¨ [{skill}] é€ æˆ {dmg}ç‚¹ä¼¤å®³")
        if not player1.take_damage(dmg):
            print(f"ğŸ‰ {player2.name} è·èƒœï¼")
            return

# åˆ›å»ºè§’è‰²
warrior = Player("äºšç‘Ÿ", ClassType.WARRIOR)
mage = Player("æ¢…æ—", ClassType.MAGE)

battle(warrior, mage)
